@model IEnumerable<AutoVentas.Models.Reservacion>

@{
    ViewBag.Title = "Reservas Realizadas";
}

<h2>Reservas Realizadas</h2>
@using (Html.BeginForm("Index", "Reservacion"))
{
    <div class="row text-center" id="filtro">
        <label id="fitroContenido"><strong>Filtrar por rango de Fechas</strong></label>
        <div class="form col-md-15">
            <label id="fechas">Fecha Inicio</label>
            <input type="date" name="fechaInicio" />
            <label id="fechas">Fecha Final</label>
            <input type="date" name="fechaFinal" />
            <input id="btnFiltro" type="submit" value="Buscar" class="btn btn-sm btn-danger">
        </div>
    </div>
}
<table class="table">
    <tr>
        <th>
            Forma de Pago
        </th>
        <th>
            Nombre del Reservante
        </th>
        <th>
            Nombre del Vehiculo
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaReserva)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FormaDePago.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vehiculo.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaReserva)
        </td>
        <td>
            @Html.ActionLink("Vender", "Vender", new { id = item.IDReservacion }, new { @class = "btn btn-success" }) |
            @Html.ActionLink("Detalles", "Details", new { id = item.IDReservacion }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Cancelar", "Delete", new { id = item.IDReservacion }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
