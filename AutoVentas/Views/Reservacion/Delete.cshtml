@model AutoVentas.Models.Reservacion

@{
    ViewBag.Title = "Delete";
}

<h2>Cancelar Reservacion</h2>

<h3 class="text-danger">Estas seguro de cancelar esta reservacion permanentemente?</h3>
<div>
    <h4>Informacion de la Reservacion</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Forma de Pago
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FormaDePago.Nombre)
        </dd>

        <dt>
            Nombre del Reservante
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Usuario.Nombre)
        </dd>

        <dt>
            Nombre del Vehiculo
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Vehiculo.Nombre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.FechaReserva)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FechaReserva)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Cancelar" class="btn btn-danger" /> |
            @Html.ActionLink("Regresar", "Index", "Reservacion", new { @class = "btn btn-primary" })
        </div>
    }
</div>
