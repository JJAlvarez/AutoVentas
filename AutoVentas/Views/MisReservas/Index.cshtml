@model IEnumerable<AutoVentas.Models.Reservacion>

@{
    ViewBag.Title = "Reservas Realizadas";
}

<h2>Reservas Realizadas</h2>

<table class="table">
    <tr>
        <th>
            Forma de Pago
        </th>
        <th>
            Nombre del Reservante
        </th>
        <th>
            Nombre del Vehiculo
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaReserva)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FormaDePago.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Usuario.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vehiculo.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaReserva)
        </td>
        <td>
            @Html.ActionLink("Detalles", "Details", new { id = item.IDReservacion }, new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Cancelar", "Delete", new { id = item.IDReservacion }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
