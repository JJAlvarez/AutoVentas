@model AutoVentas.Models.Vehiculo

@{
    ViewBag.Title = "Detalles del Vehiculo";
}

<!-- Start Page Banner -->
<div class="page-banner">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Detalles</h2>
                <p>Detalles del Vehiculo</p>
            </div>
            <div class="col-md-6">
                <ul class="breadcrumbs">
                    <li><a href="#">Catalogo</a></li>
                    <li><a href="#">Detalles</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End Page Banner -->
