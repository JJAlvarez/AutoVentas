        <div class="project-page row">

            <!-- Start Single Project Slider -->
            <div class="project-media col-md-8">
                <div class="touch-slider project-slider">
                    <div class="item">
                        <a class="lightbox" title="This is an image title" href="~/Archivo/ObtenerArchivo?id=@Model.Archivos.FirstOrDefault().IDArchivo" data-lightbox-gallery="gallery2">
                            <div class="thumb-overlay"><i class="fa fa-arrows-alt"></i></div>
                            <img alt="" src="~/Archivo/ObtenerArchivo?id=@Model.Archivos.FirstOrDefault().IDArchivo" style="width:100%;">
                        </a>
                    </div>
                </div>
            </div>
            <!-- End Single Project Slider -->
            <!-- Start Project Content -->
            <div class="project-content col-md-4">
                <h4><span>Descripcion del Vehiculo</span></h4>
                <p>@Model.Descripcion</p>
                <h4><span>Detalles del Vehiculo:</span></h4>
                <ul>
                    <li><strong>Marca:</strong> @Model.Marca.Nombre</li>
                    <li><strong>Modelo:</strong> @Model.Modelo</li>
                    <li><strong>Precio:</strong> @Model.Precio</li>
                    <li><strong>Estado:</strong> @Model.Estado</li>
                    <li><strong>Tipo de Combustible:</strong> @Model.TipoCombustible.Nombre</li>
                    <li><strong>Tipo de Vehiculo:</strong> @Model.TipoVehiculo.Nombre</li>
                    @if (Session["IDRol"] != null)
                    {
                        if (Session["IDRol"].Equals(2) && @Model.Estado == "Disponible")
                        {
                            <li><strong>Reservalo Ya:</strong> @Html.ActionLink("Reservar", "Reservar", new { id = @Model.IDVehiculo }, new { @class = "btn btn-success" })</li>
                        }   
                    }
                </ul>
            </div>
